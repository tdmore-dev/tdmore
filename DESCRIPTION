Package: tdmore
Type: Package
Title: Bayesian Therapeutic Drug Monitoring Framework
Version: 1.0.0
Authors@R: c(
  person("Ruben", "Faelens", role = c("aut", "cre"), email = "ruben.faelens@kuleuven.be"),
